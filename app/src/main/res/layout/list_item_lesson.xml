<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="понедельник, 09 января" />

    <View
        android:id="@+id/background_lesson"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_list_item_lesson"
        app:layout_constraintBottom_toBottomOf="@id/color_indicator"
        app:layout_constraintTop_toTopOf="@+id/color_indicator" />

    <View
        android:id="@+id/color_indicator"
        android:layout_width="6dp"
        android:layout_height="70dp"
        android:background="@drawable/background_lesson_color_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_date" />

    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/color_indicator"
        app:layout_constraintTop_toTopOf="@id/color_indicator"
        tools:text="10:00" />

    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/color_indicator"
        app:layout_constraintStart_toEndOf="@+id/color_indicator"
        tools:text="12:00" />

    <TextView
        android:id="@+id/text_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_start_time"
        app:layout_constraintStart_toEndOf="@+id/text_start_time"
        tools:text="Персональная тренировка" />

    <TextView
        android:id="@+id/text_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_lesson_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_lesson_name"
        tools:text="1ч. 15мин." />

    <ImageView
        android:id="@+id/image_trainer_name"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_trainer_name"
        app:layout_constraintBottom_toBottomOf="@+id/color_indicator"
        app:layout_constraintStart_toEndOf="@+id/text_end_time"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/text_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/color_indicator"
        app:layout_constraintStart_toEndOf="@+id/image_trainer_name"
        tools:text="Александров Александр" />

    <ImageView
        android:id="@+id/image_location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"

        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/color_indicator"
        app:layout_constraintStart_toEndOf="@+id/text_trainer_name" />

    <TextView
        android:id="@+id/text_lesson_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/color_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_location"
        tools:text="Тренажерный зал" />

</androidx.constraintlayout.widget.ConstraintLayout>